<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.novicezk.midjourney.mapper.TurnoverMapper">

    <resultMap id="TurnoverResultMap" type="com.github.novicezk.midjourney.domain.Turnover">
        <id property="id" column="id" />
        <result property="userId" column="userId" />
        <result property="value" column="value" />
        <result property="describe" column="describe" />
        <result property="createTime" column="createTime" />
        <result property="updateTime" column="updateTime" />
    </resultMap>

    <insert id="insert" parameterType="com.github.novicezk.midjourney.domain.Turnover">
        <!-- Add your SQL insert statement here -->
        INSERT INTO turnover (userId, value, describe, createTime, updateTime)
        VALUES (#{userId}, #{value}, #{describe}, #{createTime}, #{updateTime})
    </insert>

    <update id="update" parameterType="com.github.novicezk.midjourney.domain.Turnover">
        <!-- Add your SQL update statement here -->
        UPDATE turnover
        SET userId = #{userId}, value = #{value}, describe = #{describe}, createTime = #{createTime}, updateTime = #{updateTime}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        <!-- Add your SQL delete statement here -->
        DELETE FROM turnover WHERE id = #{id}
    </delete>

    <select id="selectById" resultMap="TurnoverResultMap" parameterType="java.lang.Long">
        <!-- Add your SQL select statement here -->
        SELECT * FROM turnover WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultMap="TurnoverResultMap" parameterType="java.lang.Long">
        <!-- Add your SQL select statement here -->
        SELECT * FROM turnover WHERE userId = #{userId}
    </select>

    <select id="selectAll" resultMap="TurnoverResultMap">
        <!-- Add your SQL select statement here -->
        SELECT * FROM turnover
    </select>

    <!-- Additional SQL statements can be added based on your requirements -->

</mapper>
